<!doctype html>
<html lang="en">

<head>
    <meta charset="UTF-8">
    <meta name="viewport" content="width=device-width, initial-scale=1.0">
    <title>{{ product.metafields.custom.page_title | default: product.title }}</title>

    <!-- Google Fonts -->
    <link
        href="{{ product.metafields.custom.google_fonts | default: 'https://fonts.googleapis.com/css2?family=Manrope:wght@400;500;600;700;800&family=Space+Grotesk:wght@500;600;700&display=swap' }}"
        rel="stylesheet">

    <!-- Font Awesome -->
    <link rel="stylesheet"
        href="{{ product.metafields.custom.font_awesome_url | default: 'https://cdnjs.cloudflare.com/ajax/libs/font-awesome/6.4.0/css/all.min.css' }}">

    <!-- Tailwind CSS -->
    <script src="{{ product.metafields.custom.tailwind_url | default: 'https://cdn.tailwindcss.com' }}"></script>
    
    <!-- Shopify Inline Editor -->
    {{ 'shopify-inline-editor.js' | asset_url | script_tag }}

    <style>
        * {
            font-family: '{{ product.metafields.custom.primary_font | default: ' Manrope' }}',
            sans-serif;
        }

        .font-space {
            font-family: '{{ product.metafields.custom.secondary_font | default: ' Space Grotesk' }}',
            sans-serif;
        }

        /* Hero Section Grid Layout */
        .hero-container {
            display: grid;
            gap: 2rem;
        }

        /* Desktop Layout - 2 columns */
        @media (min-width: 1024px) {
            .hero-container {
                grid-template-columns: 1fr 1fr;
                gap: 4rem;
                align-items: center;
            }

            .hero-badges {
                grid-column: 1;
            }

            .hero-headline {
                grid-column: 1;
            }

            .hero-subheadline {
                grid-column: 1;
            }

            .hero-features {
                grid-column: 1;
            }

            .hero-cta {
                grid-column: 1;
            }

            .hero-social {
                grid-column: 1;
            }

            /* Image spans full height in right column */
            .hero-image {
                grid-column: 2;
                grid-row: 1 / span 7;
                align-self: center;
            }

            /* Add glow effect on desktop */
            .hero-image::before {
                content: '';
                position: absolute;
                inset: -2rem;
                background: radial-gradient(circle, rgba(16, 185, 129, 0.2), transparent);
                filter: blur(3rem);
                z-index: -1;
            }
        }

        /* Mobile Layout - Single column with order */
        @media (max-width: 1023px) {
            .hero-container {
                display: flex;
                flex-direction: column;
                gap: 1.5rem;
            }

            .hero-badges {
                order: 1;
            }

            .hero-headline {
                order: 2;
            }

            .hero-subheadline {
                order: 3;
            }

            /* Image comes after subheadline on mobile */
            .hero-image {
                order: 4;
                margin: 1rem 0;
            }

            .hero-features {
                order: 5;
            }

            .hero-cta {
                order: 6;
            }

            .hero-social {
                order: 7;
            }
        }

        /* Custom animations */
        @keyframes slideDown {
            from {
                transform: translateY(-100%);
                opacity: 0;
            }

            to {
                transform: translateY(0);
                opacity: 1;
            }
        }

        @keyframes fadeInUp {
            from {
                transform: translateY(20px);
                opacity: 0;
            }

            to {
                transform: translateY(0);
                opacity: 1;
            }
        }

        @keyframes glow {

            0%,
            100% {
                box-shadow: 0 0 20px rgba(34, 197, 94, 0.5);
            }

            50% {
                box-shadow: 0 0 30px rgba(34, 197, 94, 0.8);
            }
        }

        .animate-slideDown {
            animation: slideDown 0.5s ease-out;
        }

        .animate-fadeInUp {
            animation: fadeInUp 0.8s ease-out;
        }

        .glow-effect {
            animation: glow 2s ease-in-out infinite;
        }

        /* Smooth scroll */
        html {
            scroll-behavior: smooth;
        }

        /* Reading progress */
        .progress-smooth {
            transition: width 0.3s cubic-bezier(0.4, 0, 0.2, 1);
        }

        /* Gradient text */
        .gradient-text {
            background: linear-gradient(135deg, {
                    {
                    product.metafields.custom.gradient_color_start | default: '#059669'
                }
            }

            0%, {
                {
                product.metafields.custom.gradient_color_end | default: '#10b981'
            }
        }

        100%);
        -webkit-background-clip: text;
        -webkit-text-fill-color: transparent;
        background-clip: text;
        }

        /* Premium shadows */
        .premium-shadow {
            box-shadow: 0 20px 25px -5px rgba(0, 0, 0, 0.1), 0 10px 10px -5px rgba(0, 0, 0, 0.04);
        }

        /* Notification animation */
        @keyframes slideInLeft {
            from {
                transform: translateX(-120%);
            }

            to {
                transform: translateX(0);
            }
        }

        .notification-slide {
            animation: slideInLeft 0.5s ease-out;
        }

        /* Enhanced mobile spacing */
        @media (max-width: 640px) {
            section {
                padding-left: 1rem;
                padding-right: 1rem;
            }

            h1 {
                line-height: 1.15 !important;
            }

            .container {
                padding-left: 1rem;
                padding-right: 1rem;
            }
        }
    </style>
    <script>
  window.productData = {
        id: '{{ product.id }}',
        title: '{{ product.title | escape }}',
        handle: '{{ product.handle }}',
        price: {{ product.price }},
        compare_at_price: {% if product.compare_at_price %}{{ product.compare_at_price }}{% else %}''{% endif %},
        available: {{ product.available }},
        image: "{{ product.featured_image | image_url: width: 100 }}",
        variants: [
          {% for variant in product.variants %}
          {
            id: {{ variant.id }},
            title: "{{ variant.title | escape }}",
            price: {{ variant.price }},
            available: {{ variant.available }},
            quantity: {{ variant.inventory_quantity }},
            image: {% if variant.image %}"{{ variant.image | image_url: width: 100 }}"{% else %}""{% endif %}
          }{% unless forloop.last %},{% endunless %}
          {% endfor %}
        ],
        options: {{ product.options_with_values | json }},
        selected_or_first_available_variant: {{ product.selected_or_first_available_variant | json }},
        featuredImage: {
          url: '{{ product.featured_image | image_url: width: 1000 }}'
        },
        collections: {{ product.collections | json }}
      };
</script>
